<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora Ganadora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.05"
        android:id="@+id/idTitulo" android:textSize="30sp"/>

    <TextView
        android:id="@+id/idResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTitulo" />

    <TextView
        android:text="0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idOperacion" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/idResultado" app:layout_constraintHorizontal_bias="0.807"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/id7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="12dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/id8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTitulo" />

    <Button
        android:id="@+id/id8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="12dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/id9"
        app:layout_constraintStart_toEndOf="@+id/id7"
        app:layout_constraintTop_toBottomOf="@+id/idTitulo" />

    <Button
        android:id="@+id/id9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="12dp"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@+id/idplus"
        app:layout_constraintStart_toEndOf="@+id/id8"
        app:layout_constraintTop_toBottomOf="@+id/idTitulo" />

    <Button
        android:id="@+id/idplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="204dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id9"
        app:layout_constraintTop_toBottomOf="@+id/idTitulo" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/id5" android:layout_marginEnd="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/id7"/>
    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id5" app:layout_constraintEnd_toStartOf="@+id/id6"
        android:layout_marginEnd="12dp" android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/id4" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id8"/>
    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id6" app:layout_constraintEnd_toStartOf="@+id/idless"
        android:layout_marginEnd="12dp" android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@+id/id5" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id9"/>
    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idless" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginStart="6dp" app:layout_constraintStart_toEndOf="@+id/id6"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/idplus"/>
    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/id2" android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/id4"
        app:layout_constraintHorizontal_bias="0.37"/>
    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id2" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id5" app:layout_constraintEnd_toStartOf="@+id/id3"
        android:layout_marginEnd="12dp" app:layout_constraintStart_toEndOf="@+id/id1"
        android:layout_marginStart="8dp"/>
    <Button
        android:text="3"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:id="@+id/id3" android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/id2" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id6" app:layout_constraintEnd_toStartOf="@+id/idx"
        android:layout_marginEnd="12dp"/>
    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idx"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/idless" app:layout_constraintStart_toEndOf="@+id/id3"
        android:layout_marginStart="8dp"/>
    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id0" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/idResult" android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/id1"
        app:layout_constraintHorizontal_bias="0.0"/>
    <Button
        android:text="Result"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:id="@+id/idResult" app:layout_constraintEnd_toStartOf="@+id/idClear"
        android:layout_marginEnd="12dp" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id2" app:layout_constraintStart_toEndOf="@+id/id0"
        android:layout_marginStart="8dp"/>
    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idClear" app:layout_constraintEnd_toStartOf="@+id/iddiv"
        android:layout_marginEnd="12dp" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/id3" app:layout_constraintStart_toEndOf="@+id/idResult"
        android:layout_marginStart="8dp"/>
    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iddiv" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/idx" android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/idClear" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>